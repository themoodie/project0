@model IEnumerable<project0_7.BusinessAccount>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@{
    if (Model.Count() != 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OpenDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CloseDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OpenDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CloseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        @Html.ActionLink("View Transactions", "Transactions", new { id = item.Id }) 
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@ |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    }
}